<Window x:Class="Scoring_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Belote Scoreboard" Height="500" Width="550" ResizeMode="CanMinimize">
    <Grid Name="mainGrid" Opacity="0">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/paper.jpeg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="tbox_team1" Background="{x:Null}" FontFamily="Segoe Print" Foreground="Red" TextAlignment="Center" Grid.Column="0" Width="45" Height="30" FontSize="18" Margin="10 0" HorizontalAlignment="Left" MaxLength="3" KeyDown="tbox_team1_KeyDown"/>
        <TextBlock Grid.Column="0" Text="  Ние" FontFamily="Segoe Print" FontSize="15" Width="50"  VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" Text="Вие" FontFamily="Segoe Print" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="tbox_team2" Background="{x:Null}" FontFamily="Segoe Print" Foreground="Blue" TextAlignment="Center" Grid.Column="1" Width="45" Height="30" FontSize="18" Margin="10 0" HorizontalAlignment="Left" MaxLength="3" KeyDown="tbox_team2_KeyDown"/>
        <ListBox Name="lb_team1" Grid.Row="1" Background="{x:Null}" ScrollViewer.CanContentScroll="False"/>
        <ListBox Name="lb_team2" Grid.Column="1" Grid.Row="1" Background="{x:Null}" ScrollViewer.CanContentScroll="False"/>
         
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Ние" FontFamily="Segoe Print" Margin="0 10 0 0" FontSize="17" Width="50" TextAlignment="Center"  VerticalAlignment="Center"/>
                <TextBlock Name="tb_mainscore1" Text="0" Foreground="Red" FontSize="45" FontFamily="Segoe Print" Width="50" TextAlignment="Center"  VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Margin="0 10 0 10"  FontSize="15" Width="50" TextAlignment="Center"  VerticalAlignment="Center"/>
                <TextBlock  Text=":" FontSize="45" Width="50" FontFamily="Segoe Print" TextAlignment="Center"  VerticalAlignment="Center"/>
                <Label Grid.Column="2" Content="     SCORE" Foreground="Black" FontSize="10"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical">
                <TextBlock Text="Вие" FontFamily="Segoe Print" Margin="0 10 0 0" FontSize="17" Width="50" TextAlignment="Center"  VerticalAlignment="Center"/>
                <TextBlock Name="tb_mainscore2" Text="0" FontSize="45" FontFamily="Segoe Print" Foreground="Blue" Width="50" TextAlignment="Center"  VerticalAlignment="Center"/>
            </StackPanel>
            <Border Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="DarkGray" Background="DarkGreen" Opacity="0.3" BorderThickness="5" Height="150" Margin="5 0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
